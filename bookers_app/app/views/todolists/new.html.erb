<p id="notice"></p>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @lists.each do |list| %>
        <span><%= link_to list.title, todolist_path(list.id) %></span>
        <span><%= link_to list.body, todolist_path(list.id) %></span>
      <% end %>
    </tr>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model: @list, url:'/todolists', local:true do |f| %>
  <h6>Title</h6>
  <%= f.text_field :title %>
  <h6>Body</h6>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Create Book' %>
<% end %>
