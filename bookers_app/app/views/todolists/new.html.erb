<p id="notice"></p>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.title %></td>
        <td><%= list.body %></td>
        <td><a class="show" href="#">Show</a></td>
        <td><a class="edit" href="#">Edit</a></td>
        <td><a data-confirm="Are you sure?" class="destroy" rel="nofollow" data-method="delete" href="#">Destroy</a></td>
      <% end %>
      </tr>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model: @list, url:'/todolists', local:true do |f| %>
  <div class="field">
    <label for="list-title">Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label for="list-body">Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>
